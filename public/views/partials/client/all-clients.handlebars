<div class="row mt-3">
    <h2 class="text-light armyfont ml-3 shadowed">Clients View:</h2>
</div>
<div>
    <script src="/static/js/all-clients.js"></script>
    <script src="/static/js/buy-package.js"></script>
    {{!-- <table class="table table-striped text-light markfont"> --}}
    <table class="table">
        <th scope="col">First Name </th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Address</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Gender</th>
        <th scope="col">Age</th>
        <th scope="col">Weight</th>
        <th scope="col">Actions</th>
        {{#each client}}
        <tr>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>{{email}}</td>
            <td>{{address}}</td>
            <td>{{phone_number}}</td>
            <td>{{gender}}</td>
            <td>{{age}}</td>
            <td>{{weight}}</td>
            <td>
                <button class="btn btn-sm btn-outline-light client armyfont" data-id={{id}}>View Client</button>
                <button class="btn buy-package btn-sm btn-outline-light armyfont" data-toggle="modal"
                    data-target="#purchase-package" name="{{id}}">Buy Package</button>
            </td>
        </tr>
        {{/each}}
    </table>

</div>

{{!-- Purchase package model --}}

<div class="modal fade" id="purchase-package" tabindex="-1" role="dialog" aria-labelledby="packageModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="packageModalLabel">Purchased Package</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="buy-package-form">
                    <div class="form-group">
                        <input type="hidden" id="purchasing-clientID" name="clientID" value="">
                    </div>
                    <div class="form-group">

                        <label for="selPkg">Select package:</label>
                        <select class="form-control" id="selPkg">
                            {{!-- Options dropdown populated by buy-package.js --}}
                        </select>

                    </div>
                {{!-- <button type="submit" id="pur-button" class="btn btn-primary">Submit</button> --}}

                </form>



            </div>
            <div class="modal-footer">

                <a href="#" id="btn-purchase-package" class="btn btn-success success">Purchase Package</a>

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>
