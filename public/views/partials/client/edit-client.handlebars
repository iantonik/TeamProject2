<script src="/static/js/all-clients.js"></script>

{{#each client}}

<div class="row mt-3">
    <h2 class="text-light armyfont ml-3 shadowed">Client View: {{this.first_name}} {{this.last_name}}

    </h2>
</div>

<div class="card text-white bg-dark mb-3 ml-5 mr-5">
  <div class="card-header">
    Available Actions: 
    <a href="#" class="edit-client action view-mode-{{this.id}}" name="{{this.id}}"><i class="fas fa-edit" data-toggle="tooltip" data-html="true" title="<b class='armyfont text-warning shadowed'>Edit Client</b>"></i></a>
    <a href="#" class="delete-client action view-mode-{{this.id}}" name="{{this.id}}"><i class="fas fa-trash-alt" data-toggle="tooltip" data-html="true" title="<b class='armyfont text-warning shadowed'>Delete Client</b>"></i></a>
    
    <a href="#" class="save-client action edit-mode-{{this.id}}" name="{{this.id}}" style="display: none"><i class="far fa-check-square" data-toggle="tooltip" data-html="true" title="<b class='armyfont text-warning shadowed'>Save Changes</b>"></i></a>
    <a href="#" class="cancel-edit-client action edit-mode-{{this.id}}" name="{{this.id}}" style="display: none"><i class="far fa-window-close" data-toggle="tooltip" data-html="true" title="<b class='armyfont text-warning shadowed'>Cancel Changes</b>"></i></a>
    <a href="#" class="buy-package action" data-toggle="modal" data-target="#purchase-package" id="{{id}}"><i class="fas fa-file-invoice-dollar" data-toggle="tooltip" data-html="true" title="<b class='armyfont text-warning shadowed'>Workout Packages</b>"></i></a>
  </div>
  <div class="card-body">
        <form class="text-light">
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-md">First Name:</label>
            <div class="col-sm-10">
                <h3><span id="fname-label-{{this.id}}" class="view-mode-{{this.id}}">{{this.first_name}}</span></h3>
                <input type="text" id="fname-edit-{{this.id}}" class="edit-mode-{{this.id}} form-control form-control-sm" placeholder="First Name" value="{{this.first_name}}" style="display: none" />
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-md">Last Name:</label>
            <div class="col-sm-10">
                <h3><span id="fname-label-{{this.id}}" class="view-mode-{{this.id}}">{{this.last_name}}</span></h3>
                <input type="text" id="lname-edit-{{this.id}}" class="edit-mode-{{this.id}} form-control form-control-sm" placeholder="Last Name" value="{{this.last_name}}" style="display: none" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-md">Email:</label>
            <div class="col-sm-10">
                <h3><span id="email-label-{{this.id}}" class="view-mode-{{this.id}}">{{this.email}}</span></h3>
                <input type='text' id="email-edit-{{this.id}}"  class="edit-mode-{{this.id}} form-control form-control-sm" value="{{this.email}}" style="display: none" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-md">Address:</label>
            <div class="col-sm-10">
                <h3><span id="address-label-{{this.id}}" class="view-mode-{{this.id}}">{{this.address}}</span></h3>
                <input type='text' id="address-edit-{{this.id}}"  class="edit-mode-{{this.id}} form-control form-control-sm" value="{{this.address}}" style="display: none" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-md">Phone Number:</label>
            <div class="col-sm-10">
                <h3><span id="phone-label-{{this.id}}" class="view-mode-{{this.id}}">{{this.phone_number}}</span></h3>
                <input type='text' id="phone-edit-{{this.id}}"  class="edit-mode-{{this.id}}" value="{{this.phone_number}}" style="display: none" />
            </div>
        </div>        

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-md">Gender:</label>
            <div class="col-sm-10">
                <h3><span id="gender-label-{{this.id}}" class="view-mode-{{this.id}}">{{this.gender}}</span></h3>
                <input type='text' id="gender-edit-{{this.id}}"  class="edit-mode-{{this.id}}" value="{{this.gender}}" style="display: none" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-md">Age:</label>
            <div class="col-sm-10">
                <h3><span id="age-label-{{this.id}}" class="view-mode-{{this.id}}">{{this.age}}</span></h3>
                <input type='text' id="age-edit-{{this.id}}"  class="edit-mode-{{this.id}}" value="{{this.age}}" style="display: none" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-md">Weight:</label>
            <div class="col-sm-10">
                <h3><span id="weight-label-{{this.id}}" class="view-mode-{{this.id}}">{{this.weight}} lbs</span></h3>
                <input type='text' id="weight-edit-{{this.id}}"  class="edit-mode-{{this.id}}" value="{{this.weight}}" style="display: none" />
            </div>
        </div>

        </form>        
    </div>
</div>


