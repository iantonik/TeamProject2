    + Add New Package
</button> --}}

<div class="container">
    <table class="table">
        <tr>
            {{!-- <th scope="col">Package ID</th> --}}
            <th scope="col">Package</th>
            <th scope="col">Num of Sessions</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
        </tr>
        {{#each package}}
        <tr>
            {{!-- <td>{{this.id}}</td> --}}
            <td>
                <span id="name-label-{{this.id}}" class="view-mode-{{this.id}}">{{this.workout_type}}</span>
                <input type='text' id="name-edit-{{this.id}}" class="edit-mode-{{this.id}}" value="{{this.workout_type}}" style="display: none" />
            </td>
            <td>
                <span id="count-label-{{this.id}}" class="view-mode-{{this.id}}">{{this.session_count}}</span>
                <input type='text' id="count-edit-{{this.id}}"  class="edit-mode-{{this.id}}" value="{{this.session_count}}" style="display: none" />
            </td>
            <td>
                <span id="price-label-{{this.id}}" class="view-mode-{{this.id}}">$ {{this.price}}</span>
                <input type='text' id="price-edit-{{this.id}}" class="edit-mode-{{this.id}}" value="{{this.price}}" style="display: none" />
            </td>

            <td>
                <a href="#" class="edit-pkg action view-mode-{{this.id}}" name="{{this.id}}"><i class="fas fa-edit" data-toggle="tooltip" data-html="true" title="<b class='armyfont text-warning shadowed'>Edit Client</b>"></i></a>
                {{> package/package-block}}
                <a href="#" class="delete-pkg action view-mode-{{this.id}}" name="{{this.id}}"><i class="fas fa-trash-alt"></i></a>
                
                <a href="#" class="save-pkg action edit-mode-{{this.id}}" name="{{this.id}}" style="display: none"><i class="far fa-check-square" data-toggle="tooltip" data-html="true" title="<b class='armyfont text-warning shadowed'>Save Changes</b>"></i></a>
                <a href="#" class="cancel-edit-pkg action edit-mode-{{this.id}}" name="{{this.id}}" style="display: none"><i class="far fa-window-close" class="far fa-window-close" data-toggle="tooltip" data-html="true" title="<b class='armyfont text-warning shadowed'>Cancel Changes</b>"></i></a>

            </td>
        </tr>
        {{/each}}
    </table>
</div>

<!-- Add New Modal -->
<div class="modal fade" id="packageModal" tabindex="-1" role="dialog" aria-labelledby="packageModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h3 class="modal-title armyfont" id="packageModalLabel"><i class="fas fa-dumbbell"></i> Add New Package</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="workout">Workout Type</label>
                        <input type="text" class="form-control" id="workout" placeholder="Package Name">
                    </div>
                    <div class="form-group">
                        <label for="sessionCount">Number of Sessions in Package</label>
                        <input type="number" min="1" class="form-control" id="sessionCount" placeholder="Enter Number of Sessions">
                    </div>
                    <div class="input-group">
                        <lable for="package-price">Cost of the Package</lable>
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="text" id="package-price" class="form-control" aria-label="Amount">
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button type="button" id="new-package" class="btn btn-warning">Add Package</button>

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<script src="/static/js/package.js"></script>
