<div class="row mt-3">
    <div class="col-md-12">
        <h2 class="text-light armyfont ml-3 shadowed float-left">Packages View:</h2>
        <a href="#"><button class="float-right btn btn-outline-dark add" data-toggle="modal" data-target="#packageModal"><i class="fas fa-dumbbell"></i> Add New Package</button></a>
    </div>
</div>

{{!-- <!-- Add New Package  -->
